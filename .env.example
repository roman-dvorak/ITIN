# ===========================================
# Django Core Settings
# ===========================================
DJANGO_SECRET_KEY=change-me-to-a-random-string
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SITE_ID=1

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_DB=itin
POSTGRES_USER=itin
POSTGRES_PASSWORD=itin
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===========================================
# Localization
# ===========================================
DJANGO_LANGUAGE_CODE=en-us
DJANGO_TIME_ZONE=UTC

# ===========================================
# Static/Media files
# ===========================================
DJANGO_STATIC_URL=/static/
DJANGO_MEDIA_URL=/media/

# ===========================================
# Authentication URLs
# ===========================================
DJANGO_LOGIN_URL=/accounts/login/
DJANGO_LOGIN_REDIRECT_URL=/assets/
DJANGO_LOGOUT_REDIRECT_URL=/accounts/login/

# ===========================================
# Redis / Async backend
# ===========================================
REDIS_SCHEME=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# Celery
# ===========================================
# Optional explicit URLs. Leave empty to use REDIS_* values.
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
CELERY_TASK_TRACK_STARTED=1
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# ===========================================
# Django Q
# ===========================================
DJANGO_Q_NAME=itin
DJANGO_Q_WORKERS=2
DJANGO_Q_TIMEOUT=90
DJANGO_Q_RETRY=120
DJANGO_Q_QUEUE_LIMIT=50
DJANGO_Q_BULK=10
DJANGO_Q_ORM=0
DJANGO_Q_REDIS_DB=0

# ===========================================
# Security (Production)
# ===========================================
# Comma-separated list of trusted origins for CSRF
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com
DJANGO_SECURE_SSL_REDIRECT=0
DJANGO_SESSION_COOKIE_SECURE=1
DJANGO_CSRF_COOKIE_SECURE=1

# ===========================================
# Microsoft Entra ID (Azure AD) SSO
# ===========================================
ENTRA_OIDC_PROVIDER_ID=entra
ENTRA_TENANT_ID=
ENTRA_OIDC_CLIENT_ID=
ENTRA_OIDC_CLIENT_SECRET=
