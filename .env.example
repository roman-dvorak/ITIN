# ===========================================
# Django Core Settings
# ===========================================
DJANGO_SECRET_KEY=change-me-to-a-random-string
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SITE_ID=1

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_DB=itin
POSTGRES_USER=itin
POSTGRES_PASSWORD=itin
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===========================================
# Localization
# ===========================================
DJANGO_LANGUAGE_CODE=en-us
DJANGO_TIME_ZONE=UTC

# ===========================================
# Static/Media files
# ===========================================
DJANGO_STATIC_URL=/static/
DJANGO_MEDIA_URL=/media/

# ===========================================
# Authentication URLs
# ===========================================
DJANGO_LOGIN_URL=/accounts/login/
DJANGO_LOGIN_REDIRECT_URL=/assets/
DJANGO_LOGOUT_REDIRECT_URL=/accounts/login/

# ===========================================
# Security (Production)
# ===========================================
# Comma-separated list of trusted origins for CSRF
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com
DJANGO_SECURE_SSL_REDIRECT=0
DJANGO_SESSION_COOKIE_SECURE=1
DJANGO_CSRF_COOKIE_SECURE=1

# ===========================================
# Microsoft Entra ID (Azure AD) SSO
# ===========================================
ENTRA_OIDC_PROVIDER_ID=entra
ENTRA_TENANT_ID=
ENTRA_OIDC_CLIENT_ID=
ENTRA_OIDC_CLIENT_SECRET=
